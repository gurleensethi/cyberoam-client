<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/enrollment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:fontFamily="sans-serif-light"
        android:text="14103093"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/edit_account_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit_black_24dp"
        android:tint="@android:color/white"/>

    <ImageButton
        android:id="@+id/delete_account_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/edit_account_image_button"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="@android:color/white"/>

    <View
        android:id="@+id/status_indicator_view"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/delete_account_image_button"
        android:background="@drawable/circle_green"/>

</RelativeLayout>