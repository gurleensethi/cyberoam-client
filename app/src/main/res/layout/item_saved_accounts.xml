<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:foreground="@drawable/ripple"
                android:orientation="horizontal">

    <View
        android:id="@+id/status_indicator_view"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_dark"/>

    <TextView
        android:id="@+id/enrollment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/status_indicator_view"
        android:fontFamily="sans-serif-light"
        android:text="14103093"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/edit_account_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit_black_24dp"/>

    <ImageButton
        android:id="@+id/delete_account_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/edit_account_image_button"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="@android:color/holo_red_light"/>

</RelativeLayout>